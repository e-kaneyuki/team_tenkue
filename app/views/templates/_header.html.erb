
    <header class="header">
  <div class="header__bar">
    <h1>
      <%# ルートパスへのリンクを設置 %>
      <span>転クエ掲示板</span>
    </h1>


    <%# ログイン状態に応じて表記を変更すること %>
<%# ログインされている場合 %>
  <% if user_signed_in? %>
    <ul class="header__bar__user_nav">
      <li class="user_name">
        <span>ユーザー名 さん</span>
      </li>
      <li class="header__bar__user_nav__btn">
         <%= link_to 'ログアウト', users_guest_logout_path, method: :delete %>
      </li>
      <li class="header__bar__user_nav__btn">
        <%= link_to "投稿する", new_post_path %>
      </li>
    </ul>
<%# ログインされていない場合 %>
<% else %>
    <ul class="header__bar__user_nav">
      <li class="header__bar__user_nav__btn">
       <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      </li>
      <li class="header__bar__user_nav__btn">
        ログイン
      </li>
      <li class="header__bar__user_nav__btn">
        新規登録
      </li>
    </ul>
<% end %>
  </div>
</header>
