
    <header class="header">
  <div class="header__bar">
    <h1>
      <span>転クエ掲示板</span>
    </h1>
  <% if user_signed_in? %>
    <ul class="header__bar__user_nav">
      <li class="user_name">
        <span>ユーザー名 さん</span>
      </li>
      <li class="header__bar__user_nav__btn">
         <%= link_to 'ログアウト', users_sign_out_path, method: :get %>
      </li>
      <li class="header__bar__user_nav__btn">
        <%= link_to "投稿する", new_post_path %>
      </li>
    </ul>
<% else %>
    <ul class="header__bar__user_nav">
      <li class="header__bar__user_nav__btn">
       <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      </li>
      <li class="header__bar__user_nav__btn">
        ログイン
      </li>
      <li class="header__bar__user_nav__btn">
        新規登録
      </li>
    </ul>
<% end %>
  </div>
</header>
